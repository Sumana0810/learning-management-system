<%- include("partial/header")%>
<div class="row">
    <%- include("partial/sidebar")%>
    <div class="col-lg-9" style="height: 90vh;">
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title">Edit course</h5>
            </div>
            <div class="card-body">
                <% if (typeof message !== "undefined" && message) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <form action="/admin/editcourse/<%= course._id %>" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" value="<%= course.name %>" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" name="description" value="<%= course.description %>" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label>Price</label>
                        <input type="text" name="price" value="<%= course.price %>" class="form-control" required>
                    </div>
                    
                    <p><strong>Image:</strong><img src="/images/course/<%= course.image %>" width="100px" height="100px" alt=""></p>
                    
                    <button type="submit" class="btn btn-primary">Update course</button>
                    <a href="/admin/allcourse" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include("partial/footer")%>
