<%- include("partial/header")%>

<style>
    body {
        background-color: #0d1b2a;
        color: #e0e0e0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-image: linear-gradient(to bottom right, #0d1b2a, #1b263b);
        min-height: 100vh;
    }

    .modal-content {
        background-color: #1b263b;
        border-radius: 15px;
        border: 2px solid #415a77;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, #415a77 0%, #1b263b 100%);
        color: #e0e0e0;
        border-bottom: 2px solid #778da9;
        padding: 1.2rem 2rem;
        position: relative;
    }

    .modal-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background: linear-gradient(to right, transparent, #778da9, transparent);
    }

    .modal-title {
        font-weight: bold;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .modal-title i {
        color: #296cc5;
    }

    .form-control {
        background-color: rgba(13, 27, 42, 0.7);
        color: #e0e0e0;
        border: 1px solid #236abb;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        background-color: rgba(13, 27, 42, 0.9);
        color: #ffffff;
        border: 1px solid #778da9;
        box-shadow: 0 0 0 3px rgba(119, 141, 169, 0.2);
    }

    .form-group {
        position: relative;
        margin-bottom: 1.2rem;
    }

    label {
        font-weight: 500;
        margin-top: 10px;
        margin-bottom: 8px;
        display: block;
        color: #2680e6;
        font-size: 0.95rem;
        transition: color 0.3s;
    }

    .input-icon {
        position: relative;
    }

    .input-icon i {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #1e71de;
        z-index: 2;
    }

    .input-icon .form-control {
        padding-left: 45px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #96b7e2 0%, #1873da 100%);
        border: none;
        color: #131b24;
        font-weight: bold;
        border-radius: 10px;
        padding: 12px 25px;
        transition: all 0.3s;
        width: 100%;
        margin-top: 1rem;
        box-shadow: 0 4px 10px rgba(91, 28, 28, 0.2);
        position: relative;
        overflow: hidden;
    }

    .btn-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: 0.5s;
    }

    .btn-primary:hover::before {
        left: 100%;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #235fa4 0%, #778da9 100%);
        color: #ffffff;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        transform: translateY(-2px);
    }

    .modal-body {
        padding: 2.5rem;
    }

    .modal-dialog {
        max-width: 650px;
        margin: 2rem auto;
    }

    select.form-control {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23778da9' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 15px center;
        background-size: 16px;
        padding-right: 40px;
    }

    .form-row {
        display: flex;
        gap: 15px;
        margin-bottom: 1.2rem;
    }

    .form-row .form-group {
        flex: 1;
        margin-bottom: 0;
    }

    @media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>

<div class="row">
    <%- include("partial/sidebar")%>
    <div class="col-lg-9" style="min-height: 90vh; display: flex; align-items: center; justify-content: center;">
        <div class="" id="modelRegister" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-user-graduate"></i> Student Registration</h5>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/addstudent" method="post">
                            <div class="form-group">
                                <label>Name</label>
                                <div class="input-icon">
                                    <i class="fas fa-user"></i>
                                    <input type="text" required class="form-control" name="name" placeholder="Enter full name">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>Email</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                    <input type="email" required class="form-control" name="email" placeholder="Enter email address">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>Phone</label>
                                <div class="input-icon">
                                    <i class="fas fa-phone"></i>
                                    <input type="text" required class="form-control" name="phone" placeholder="Enter phone number">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>Password</label>
                                <div class="input-icon">
                                    <i class="fas fa-lock"></i>
                                    <input type="password" required class="form-control" name="password" placeholder="Create password">
                                </div>
                            </div>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label>Age</label>
                                    <input type="number" required class="form-control" name="age" placeholder="Age">
                                </div>
                                
                                <div class="form-group">
                                    <label>Gender</label>
                                    <select name="gender" class="form-control">
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                    <label>Nationality</label>
                                    <select name="nationality" class="form-control">
                                        <option value="indian">Indian</option>
                                        <option value="foreign">Foreign</option>
                                    </select>
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Register Student
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partial/footer")%>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script>
    // Add subtle animation to form elements
    document.addEventListener('DOMContentLoaded', function() {
        const formControls = document.querySelectorAll('.form-control');
        
        formControls.forEach(control => {
            control.addEventListener('focus', function() {
                this.parentElement.parentElement.style.transform = 'translateY(-2px)';
            });
            
            control.addEventListener('blur', function() {
                this.parentElement.parentElement.style.transform = 'translateY(0)';
            });
        });
    });
</script>