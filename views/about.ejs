            -webkit-text-fill-color: transparent;
        }
        
        .nav-link {
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 4px;
            margin: 0 0.2rem;
            transition: all 0.3s ease;
            color: var(--text-light) !important;
        }
        
